#include <stdio.h>
#include <math.h>
#include <locale.h>

//Programa que pede um numero referente ao mês do calendário anual, e diz quantos dias tem esse mês

    int main (void){

        setlocale(LC_ALL, "Portuguese");

        int mes, dias;

        printf("Digite o número de um mês [1-12]: ");
        scanf("%d", &mes);

        switch(mes){

        case 1:
            dias = 31;
        break;
        case 2:
            dias = 29;
        break;
        case 3:
            dias = 31;
        break;
        case 4:
            dias = 30;
        break;
        case 5:
            dias = 31;
        break;
        case 6:
            dias = 30;
        break;
        case 7:
            dias = 31;
        break;
        case 8:
            dias = 31;
        break;
        case 9:
            dias = 30;
        break;
        case 10:
            dias = 31;
        break;
        case 11:
            dias = 30;
        break;
        case 12:
            dias = 31;
        break;

        default:
            printf("Opção inválida!");

        break;

        }

        printf("O mês %d possui %d dias: ", mes, dias);

    }
